{
    "name": "Twitter",
    "description": "Send tweet on new messages. See <a href='https://developer.twitter.com/en/docs/basics/authentication/guides/access-tokens.html' target='_blank'>Twitter documentation</a> for key information.",
    "disable": false,
    "trigger": "message",
    "scope": "after",
    "config": [ 
        {
            "name": "consKey",
            "label": "Consumer Key",
            "description": "Twitter Consumer API key",
            "type": "text",
            "required": true
        },
        {
            "name": "consSecret",
            "label": "Consumer Secret",
            "description": "Twitter Consumer API secret key",
            "type": "password",
            "required": true
        },
        {
            "name": "accToken",
            "label": "Access Token",
            "description": "Twitter account access token",
            "type": "text",
            "required": true
        },
        {
            "name": "accSecret",
            "label": "Access Secret",
            "description": "Twitter account access secret key",
            "type": "password",
            "required": true
        },
        {
            "name": "globalHashtags",
            "label": "Global Hashtags",
            "description": "String of space separated hashtags to append to all tweets",
            "type": "text"
        }
    ],
    "aliasConfig": [ 
        {
            "name": "enable",
            "label": "Enable",
            "description": "Send tweets on messages matching this alias",
            "type": "checkbox"
        },
        {
            "name": "hashtag",
            "label": "Twitter Alias Hashtags",
            "description": "Hashtags to append to all Twitter posts from this alias. Space separated",
            "type": "text"
        }
    ]
}

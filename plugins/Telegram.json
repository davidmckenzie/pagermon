{
    "name": "Telegram",
    "description": "Push messages to Telegram channel",
    "disable": false,
    "trigger": "message",
    "scope": "after",
    "config": [
        {
            "name": "teleAPIKEY",
            "label": "Telegram API Key",
            "description": "API key for Telegram",
            "type": "text",
            "required": true
        }
    ],
    "aliasConfig": [
        {
            "name": "enable",
            "label": "Enable",
            "description": "Send matching messages to your Telegram channel",
            "type": "checkbox"
        },
        {
            "name": "chat",
            "label": "Chat ID",
            "description": "Telegram chat ID to send to",
            "type": "text",
            "required": true
        }
    ]
}